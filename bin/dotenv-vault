#!/bin/bash

source ~/.dotenv-vault/src/dotenv-vault.sh

command=$1

dotenv-vault::help() {
    echo 'usage: dotenv-vault'
    echo '    encrypt FILE'
    echo '    decrypt FILE'
}

case $command in
    'encrypt') dotenv-vault::encrypt $@ ;;
    'decrypt') dotenv-vault::decrypt $@ ;;
    *) dotenv-vault::help ;;
esac
