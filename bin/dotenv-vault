#!/bin/bash

ROOT_DIR=`cd $(dirname $0); pwd`

for f in $ROOT_DIR/../src/*.sh; do
    source $f
done

command=$1

dotenv-vault::help() {
    echo 'usage: dotenv-vault'
    echo '    encrypt FILE'
    echo '    decrypt FILE'
}

case $command in
    'encrypt') dotenv-vault::encrypt $@ ;;
    'decrypt') dotenv-vault::decrypt $@ ;;
    *) dotenv-vault::help ;;
esac
